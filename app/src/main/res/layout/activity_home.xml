<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C0C0C0">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="160dp"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_blue"
                    android:text="코로나 알람"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_marginLeft="270dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_blue"
                    android:textSize="12sp"
                    android:textColor="#f9f9f9"
                    android:paddingTop="25dp"
                    android:paddingLeft="30dp"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DCDCDC	"
                        android:text="확진자 현황"
                        android:textSize="7pt"
                        android:textColor="#DC143C"/>
                    <TextView
                        android:layout_marginTop="40dp"
                        android:paddingLeft="140dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="국내 확진자" />
                    <TextView
                        android:id="@+id/KorPatient"
                        android:layout_marginTop="65dp"
                        android:layout_marginLeft="90dp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/KorDayAgo"
                        android:layout_marginTop="75dp"
                        android:layout_marginLeft="180dp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_marginTop="110dp"
                        android:paddingLeft="140dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="해외 확진자" />
                    <TextView
                        android:id="@+id/OtherPatient"
                        android:layout_marginTop="135dp"
                        android:layout_marginLeft="65dp"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/OtherDayAgo"
                        android:layout_marginTop="145dp"
                        android:layout_marginLeft="180dp"
                        android:layout_width="130dp"
                        android:layout_height="40dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DCDCDC	"
                        android:text="상세 현황"
                        android:textSize="7pt"
                        android:textColor="#DC143C"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                        android:background="@color/darkOrange"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="125dp"
                        android:layout_height="40dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:paddingLeft="25dp"
                            android:text="확진자(일일)"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/patientDay"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:paddingLeft="40dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@color/md_blue"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="25dp"
                                android:text="확진자(누적)"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:id="@+id/patientStack"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="40dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="145dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:background="@color/orange">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="5dp"
                                android:text="국내발생"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:id="@+id/korDay"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="25dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="210dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:background="#FA8072">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="5dp"
                                android:text="해외유입"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:id="@+id/otherDay"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="25dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="145dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:background="#4682B4">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="5dp"
                                android:text="격리해제"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:id="@+id/recoveredStack"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="210dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:background="#00CED1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="10dp"
                                android:text="치료중"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:id="@+id/IsolationStack"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:paddingLeft="15dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="275dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:background="	#00BFFF">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:paddingLeft="20dp"
                            android:text="사망"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/deathsStack"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:paddingLeft="20dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DCDCDC	"
                        android:text="국내 확진자 수 증가추이"
                        android:textSize="7pt"
                        android:textColor="#DC143C"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DCDCDC	"
                        android:text="대전 현황"
                        android:textSize="7pt"
                        android:textColor="#DC143C"/>
                    <TextView
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="확진자" />
                    <TextView
                        android:id="@+id/patient"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="24sp"/>
                    <TextView
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="150dp"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="사망자" />
                    <TextView
                        android:id="@+id/deaths"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="150dp"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="24sp"/>
                    <TextView
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="250dp"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="완치자" />
                    <TextView
                        android:id="@+id/recovered"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="235dp"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="24sp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#DCDCDC	"
                        android:text="시도별 확진자 현황"
                        android:textSize="7pt"
                        android:textColor="#DC143C"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:id="@+id/horizontalBarChar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="280dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="출처: 질병관리본부"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>